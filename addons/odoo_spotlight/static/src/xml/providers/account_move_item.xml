<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="odoo_spotlight.AccountItemContent">
        <div class="o_spotlight_item_body d-flex align-items-center gap-3">
            <img
            class="o_spotlight_avatar rounded-circle flex-shrink-0"
            t-att-src="'/web/image/res.partner/' + props.item.idCustomer + '/image_128'"
            alt="Customer"
            />

            <div class="o_spotlight_item_main flex-grow-1 min-w-0">
                <div class="o_spotlight_item_title d-flex align-items-center gap-2">
                    <span class="fw-semibold text-truncate">
                        <t t-esc="props.item.name"/>
                    </span>
                    <span class="text-muted">â€¢</span>
                    <span class="text-muted text-truncate">
                        <t t-esc="props.item.customer"/>
                    </span>
                </div>
                <div>
                    <t t-esc="props.item.invoiceDate" />
                </div>

                <div class="o_spotlight_item_subtitle small text-muted">
                    <t t-esc="props.item.salesperson"/>
                </div>
            </div>

            <div class="o_spotlight_item_right text-end flex-shrink-0">
                <span t-att-class="'badge o_account_payment_state_' + props.item.paymentState">
                    <t t-esc="props.item.paymentStateLabel"/>
                </span>
                <div class="fw-semibold mt-1">
                    <t t-esc="props.item.amountTotal"/>
                    <span class="px-1 small text-muted">incl. VAT</span>
                </div>
            </div>
        </div>
    </t>
</templates>
